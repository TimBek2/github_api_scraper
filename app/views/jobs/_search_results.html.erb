<% if @jobs.count > 0 %>
  <h4>Search Results</h4>

  <% @jobs.each do |job| %>
    <div class="job-wrapper">
      <h4><%= job.title %></h4>
      <p><%= (sanitize job.description.slice(0, 175) + '...') %></p>
      <p><%= job.company %> <%= job.location %></p>
      <p><%= job.job_type %></p>

      <%= link_to 'Read more', job %>
    </div>
  <% end %>
<% end %>
